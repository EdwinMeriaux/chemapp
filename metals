class DetailScreen extends StatelessWidget {

    /*static var hydrogen = new element("Hydrogen",1,1,0);
    static var helium = new element("Helium",2,2,2);
    static var lithium = new element("Lithium",3,3,4);
    static var beryllium = new element("Beryllium",4,4,5);
    */

    //static List allelementsname = [hydrogen.name,helium.name,lithium.name,beryllium.name];
    //static List allelementspnumer = [hydrogen.proton,helium.proton,lithium.proton,beryllium.proton];
    //static List allelementsenumer = [hydrogen.electron,helium.electron,lithium.electron,beryllium.electron];
    static List<String> addresses = ["assets/hydrogen.jpg","assets/helium.jpg","assets/lithium.jpg","assets/beryllium.jpg","assets/boron.jpg","assets/carbon.jpg","assets/nitrogen.jpg","assets/oxygen.jpg","assets/fluorine.jpg","assets/neon.jpg","assets/sodium.jpg","assets/magnesium.jpg","assets/aluminium.jpg","assets/silicon.jpg","assets/phosphorus.jpg","assets/sulfur.jpg","assets/cholrine.jpg","assets/argon.jpg","assets/potassium.jpg","assets/calcium.jpg"];
    // Declare a field that holds the Todo.
    final List todo;

    // In the constructor, require a Todo.
    DetailScreen({Key key, @required this.todo}) : super(key: key);

    @override
    Widget build(BuildContext context) {
        // Use the Todo to create the UI.
        int value = todo[0] - 1;
        return Scaffold(
            appBar: AppBar(
                title: Text("${chemval(value,1)}"),
            ),
            body: /*new Center(
                child: new imagerwidget()*/

            //)

            Padding(
                padding: EdgeInsets.all(16.0),
                child:
                ListView(
                    children: <Widget>[
                        Text("number of protons is  ${chemval(value,2)}"),
                        Text("number of protons is  ${chemval(value,3)}"),
                        Text("number of protons is  ${chemval(value,4)}"),
                        Image.asset(chemval(value,0))



                    ])
            ),
        );
    }
}

class element{
    String address;
    String name;
    int proton;
    int neutron;
    int electron;
    element(String address,String namee,int valuep, int valuee, int valuen){
        address = address;
        name = namee;
        proton = valuep;
        electron = valuee;
        neutron = valuen;
    }

}

