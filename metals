class element{
    String address;
    String name;
    int proton;
    int neutron;
    int electron;
    element(String address,String namee,int valuep, int valuee, int valuen){
        address = address;
        name = namee;
        proton = valuep;
        electron = valuee;
        neutron = valuen;
    }

}

